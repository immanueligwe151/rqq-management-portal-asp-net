
@{
    ViewBag.Title = "General Login page";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h3 class="mb-4 text-center">Agent Login</h3>
                    <form method="post" action="/Agent/Authenticate"> <!--to come back to this-->
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="username" class="form-control" id="username" placeholder="Enter your username here" required />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password here" required />
                        </div>

                        <div class="mb-3 text-end">
                            <small>
                                <a href="/admin/login" class="text-decoration-none">Login as admin</a>
                            </small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
            <p class="text-center mt-3 text-muted">&copy; 2025 Rokholt Group</p>
        </div>
    </div>
</div>

