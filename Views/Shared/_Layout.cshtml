<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RG Management Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>

<body>
    @Html.Raw("<script src=\"https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js\"></script>")



    @{
        var currentController = ViewContext.RouteData.Values["controller"].ToString();
    }

    @if (currentController == "Admin")
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-info mb-4">
            <div class="container justify-content-center">
                <div class="navbar-nav" style="display: flex; flex-direction: row; gap: 25px;">
                    <a class="nav-item nav-link text-white mx-5" href="/Admin/Home">Home</a>
                    <a class="nav-item nav-link text-white mx-5" href="/Admin/CreateAgentAccount">Create Agent Account</a>
                    <a class="nav-item nav-link text-white mx-5" href="/Admin/ViewRequests">View Requests</a>
                    <a class="nav-item nav-link text-white mx-5" href="/Admin/ViewApprovals">View Approvals</a>
                    <a class="nav-item nav-link text-white mx-5" href="/Admin/ViewAgentAccounts">View Agent Accounts</a>
                    <a class="nav-item nav-link text-white mx-5" href="/Admin/Logout">Log Out</a>
                </div>
            </div>
        </nav>

    }
    else if (currentController == "Agent")
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-info mb-4">
            <div class="container text-center">
                <div class="navbar-nav mx-auto">
                    <a class="nav-item nav-link text-white mx-3" href="/Agent/Home">Dashboard</a>
                    <a class="nav-item nav-link text-white mx-3" href="/Agent/AssignedRequests">My Assigned Requests</a>
                    <a class="nav-item nav-link text-white mx-3" href="/Agent/Completed Requests">Completed Requests</a>
                    <a class="nav-item nav-link text-white mx-3" href="/Agent/ViewApprovals">My Approvals</a>
                    <a class="nav-item nav-link text-white mx-3" href="/Agent/Logout">Log Out</a>
                </div>
            </div>
        </nav>
    }
    else
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-info mb-4">
            <div class="container text-center">
                <div class="navbar-nav mx-auto">
                    <a class="nav-item nav-link text-white mx-3" href="/Home/Index">Home</a>
                    <a class="nav-item nav-link text-white mx-3" href="/Home/About">About</a>
                    <a class="nav-item nav-link text-white mx-3" href="/Home/Contact">Contact</a>
                </div>
            </div>
        </nav>
    }




    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
